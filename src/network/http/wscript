def options(opt):
  pass

def configure(conf):
  pass

def build(bld):
  bld.install_files('${HPREFIX}/network/http', [
      'base.h',
      'stream.h',
      ])

  bld(
    features = bld.env.FEATURES,
    source = 'base.cpp',
    target = 'pficommon_network_http',
    install_path = '${PREFIX}/lib',
    includes = '. ..',
    vnum = bld.env['VERSION'],
    use = 'pficommon_network_base')
